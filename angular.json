{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "cli": {
    "packageManager": "yarn",
    "analytics": false
  },
  "projects": {
    "site": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "less"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "src/dist",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "tsConfig": "src/tsconfig.site.json",
            "polyfills": [
              "@webcomponents/custom-elements",
              "@webcomponents/custom-elements/src/native-shim",
              "zone.js"
            ],
            "assets": [
              "src/assets",
              "src/manifest.json",
              "src/robots.txt",
              {
                "glob": "**/{xlsx.full.min,cpexcel}.js",
                "input": "./node_modules/xlsx/dist",
                "output": "assets/xlsx/"
              },
              {
                "glob": "**/jszip.min.js",
                "input": "./node_modules/jszip/dist",
                "output": "assets/jszip/"
              },
              {
                "glob": "**/qrious.min.js",
                "input": "./node_modules/qrious/dist",
                "output": "assets/qrious/"
              },
              {
                "glob": "{build,web}/**",
                "input": "./node_modules/pdfjs-dist/",
                "ignore": ["*.js.map", "*.d.ts"],
                "output": "assets/pdfjs/"
              },
              {
                "glob": "**/{plyr.min.js,plyr.css,plyr.svg}",
                "input": "./node_modules/plyr/dist",
                "output": "assets/plyr/"
              }
            ],
            "styles": [
              "node_modules/aos/dist/aos.css",
              "src/styles.less"
            ],
            "stylePreprocessorOptions": {
              "includePaths": ["node_modules/"]
            },
            "scripts": [
              "node_modules/aos/dist/aos.js"
            ],
            "allowedCommonJsDependencies": [
              "codesandbox/lib/api/define",
              "hammerjs",
              "ajv",
              "file-saver",
              "ajv-formats",
              "date-fns",
              "extend",
              "aos"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all",
              "serviceWorker": "ngsw-config.json",
              "server": "src/main.server.ts",
              "prerender": {
                "routesFile": "scripts/site/route-paths.txt"
              },
              "ssr": {
                "entry": "src/server.ts"
              }
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "site:build:production"
            },
            "development": {
              "buildTarget": "site:build:development"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    },
    "delon": {
      "sourceRoot": "packages",
      "root": "packages",
      "projectType": "library",
      "prefix": "",
      "architect": {
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "fix": true,
            "lintFilePatterns": [
              "packages/**/*.ts",
              "packages/**/*.html"
            ]
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "packages/test.ts",
            "karmaConfig": "packages/karma.conf.js",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "packages/tsconfig.spec.json",
            "scripts": ["node_modules/@antv/g2/dist/g2.min.js", "node_modules/@antv/data-set/dist/data-set.js"],
            "codeCoverageExclude": ["schematics/**", "packages/testing/**"],
            "include": [
              "./test.ts",
              // "**/st.spec.ts"
              // "**/st/**/*.spec.ts"
              "**/*.spec.ts"
            ]
          }
        }
      }
    }
  }
}
