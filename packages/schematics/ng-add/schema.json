{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNgAlainAdd",
  "title": "NgAlain Add Options Schema",
  "type": "object",
  "properties": {
    "codeStyle": {
      "type": "boolean",
      "default": false,
      "description": "Do not add code styles (e.g., --codeStyle)"
    },
    "form": {
      "type": "boolean",
      "description": "Generates form.",
      "default": true
    },
    "mock": {
      "type": "boolean",
      "description": "Generates mock.",
      "default": true
    },
    "defaultLanguage": {
      "type": "string",
      "description": "Specify default language [https://ng-alain.com/docs/i18n].",
      "default": "zh-Hans"
    },
    "i18n": {
      "type": "boolean",
      "description": "Generates i18n.",
      "default": false
    },
    "g2": {
      "type": "boolean",
      "description": "Generates g2.",
      "default": false
    },
    "npm": {
      "type": "boolean",
      "description": "Generates .npmrc proxy to taobao.",
      "default": false
    },
    "yarn": {
      "type": "boolean",
      "description": "Generates .yarnrc proxy to taobao.",
      "default": false
    },
    "hmr": {
      "type": "boolean",
      "description": "Generates hmr files and configuration",
      "default": true
    }
  }
}
